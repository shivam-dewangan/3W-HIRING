{
  "name": "leaderboard-task",
  "version": "1.0.0",
  "description": "Leaderboard Task",
  "main": "index.js",
  "scripts": {
    "start": "concurrently \"npm run server\" \"npm run client\"",
    "server": "cd backend && npm start",
    "client": "cd frontend && npm run dev",
    "build": "cd frontend && npm run build && npx copyfiles -u 1 frontend/dist/* backend/public/"
  },
  "dependencies": {
    "copyfiles": "^2.4.1"
  },
  "devDependencies": {
    "concurrently": "^9.1.2"
  }
}
